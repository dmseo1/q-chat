<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/root"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#ffffff">

    <ImageView
            android:id="@+id/opa_window"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#66000000"
            android:visibility="gone"
            android:contentDescription="@string/opa_window_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
            android:id="@+id/pg_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_room_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            android:windowSoftInputMode="adjustNothing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:openDrawer="end">

        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:windowSoftInputMode="adjustNothing"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                    android:id="@+id/frame_map"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

            </FrameLayout>

            <ImageView
                    android:id="@+id/img_q_board"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:windowSoftInputMode="adjustNothing"
                    android:scaleType="fitXY"
                    android:layout_marginTop="41dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/activity_chatting_room_img_q_board"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/img_q_board"
                   />

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:background="@drawable/chatting_room_up_button_background"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          android:layout_marginTop="4dp"
                          android:layout_marginStart="8dp"
                          android:padding="5dp">
                <ImageView
                        android:id="@+id/btn_q_report"
                        android:layout_width="25dp"
                        android:layout_height="25dp"


                        android:contentDescription="@string/activity_chatting_room_btn_q_report"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ico_qreport"
                />

                <ImageView
                        android:id="@+id/btn_help"
                        android:layout_width="25dp"
                        android:layout_height="25dp"

                        android:layout_marginStart="4dp"
                        android:contentDescription="@string/activity_chatting_room_btn_help"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/btn_q_report"
                        android:src="@drawable/ico_help"/>

                <ImageView
                        android:id="@+id/img_dup_answer"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="@string/activity_chatting_room_img_dup_answer"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/btn_help"
                        android:visibility="gone"
                        android:src="@drawable/ico_dup_answer"
                />

            </LinearLayout>





            <LinearLayout
                    android:id="@+id/question_main"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="41dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/lbl_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="8dp"
                        android:background="#00ffffff"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="5"
                        android:singleLine="false"
                        android:padding="4dp"
                        android:text="@string/activity_chatting_room_lbl_question"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="18sp"/>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/ranking_list"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:visibility="gone"
                />

                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
            </LinearLayout>

            <ImageView
                    android:id="@+id/btn_show_drawer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:alpha="0.7"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/activity_chatting_room_btn_menu"
                    android:src="@drawable/ico_chat_menu"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"/>

            <ImageView
                    android:id="@+id/btn_go_battle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:alpha="0.7"
                    android:visibility="gone"
                    android:contentDescription="@string/activity_chatting_room_btn_go_battle"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_show_drawer"
                    android:src="@drawable/ico_go_battle"/>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/chatting_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="0dp">

                <ImageView
                        android:id="@+id/img_chatting_show_hide"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/chatting_list"
                        android:contentDescription="@string/activity_chatting_room_img_chatting_show_hide"
                        android:src="@drawable/ico_chat_hide"
                />

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/chatting_list"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="#99000000"
                        android:layout_gravity="bottom"
                        app:layout_constraintBottom_toTopOf="@+id/chatting_input"
                        app:layout_constraintStart_toStartOf="parent"
                        android:scrollbars="vertical"
                        android:visibility="visible"
                />

                <LinearLayout
                        android:id="@+id/chatting_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:windowSoftInputMode="adjustPan"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent">

                    <com.dongmin.qchat.library.BackPressEditText
                            android:id="@+id/txt_message"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:maxLines="3"/>

                    <Button
                            android:id="@+id/btn_send"
                            android:layout_width="80dp"
                            android:background="#ff901e"
                            android:layout_margin="8dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="@string/activity_chatting_room_btn_send"/>
                </LinearLayout>


            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.NavigationView
                android:id="@+id/nav_menu"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="#ffffffff"
                android:visibility="visible">

            <LinearLayout
                    android:id="@+id/menu_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffe0c0"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="visible">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/lbl_menu_title_desc"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:text="@string/activity_chatting_room_lbl_menu_title_desc"
                            android:textAlignment="center"
                            android:textColor="#974c00"/>

                    <TextView
                            android:id="@+id/lbl_menu_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    <ImageView
                            android:id="@+id/btn_menu_edit_title"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:visibility="gone"
                            android:contentDescription="@string/activity_chatting_room_btn_menu_edit"
                            android:src="@drawable/ico_chat_edit"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/lbl_menu_q_type_desc"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:text="@string/activity_chatting_room_lbl_menu_q_type_desc"
                            android:textAlignment="center"
                            android:textColor="#974c00"/>

                    <TextView
                            android:id="@+id/lbl_menu_q_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="18sp"/>

                    <ImageView
                            android:id="@+id/btn_menu_edit_q_type"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:visibility="gone"
                            android:contentDescription="@string/activity_chatting_room_btn_menu_edit"
                            android:src="@drawable/ico_chat_edit"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/lbl_menu_p_type_desc"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:text="@string/activity_chatting_room_lbl_menu_p_type_desc"
                            android:textAlignment="center"
                            android:textColor="#974c00"/>

                    <TextView
                            android:id="@+id/lbl_menu_p_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="18sp"/>

                    <ImageView
                            android:id="@+id/btn_menu_edit_p_type"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:visibility="gone"
                            android:contentDescription="@string/activity_chatting_room_btn_menu_edit"
                            android:src="@drawable/ico_chat_edit"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/lbl_menu_me"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_chatting_room_lbl_menu_me"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                    <Button
                            android:id="@+id/btn_menu_change_character"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="#ff901e"
                            android:textSize="17sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_margin="2dp"
                            android:padding="4dp"
                            android:text="@string/activity_chatting_room_btn_menu_change_character"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    <ImageView
                            android:id="@+id/img_menu_profile_img"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/activity_chatting_room_img_menu_profile_img"
                            android:src="@drawable/ico_no_profile_img"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/lbl_menu_my_nickname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">


                            <TextView
                                    android:id="@+id/lbl_menu_points_desc"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/activity_chatting_room_lbl_menu_points_desc"
                                    android:textAlignment="center"
                                    android:textColor="#974c00"/>

                            <TextView
                                    android:id="@+id/lbl_menu_my_points"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginStart="8dp"
                                    android:textColor="#000000"
                                    android:textSize="18sp"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                            <TextView
                                    android:id="@+id/lbl_menu_exp_desc"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/activity_chatting_room_lbl_menu_exp_desc"
                                    android:textAlignment="center"
                                    android:textColor="#974c00"/>

                            <TextView
                                    android:id="@+id/lbl_menu_my_exp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginStart="8dp"
                                    android:textColor="#000000"
                                    android:textSize="18sp"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/lbl_menu_current_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_chatting_room_lbl_menu_current_people"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/lbl_menu_num_current_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/lbl_menu_num_people_slash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_chatting_room_lbl_menu_num_people_slash"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/lbl_menu_num_max_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/lbl_menu_num_people_rp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_chatting_room_lbl_menu_num_people_rp"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    <ImageView
                            android:id="@+id/btn_menu_edit_max_people"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:visibility="gone"
                            android:contentDescription="@string/activity_chatting_room_btn_menu_edit"
                            android:src="@drawable/ico_chat_edit"/>

                    <ImageView
                            android:id="@+id/btn_menu_invite_person"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="8dp"
                            android:visibility="gone"
                            android:contentDescription="@string/activity_chatting_room_btn_menu_invite_person"
                            android:src="@drawable/ico_plus"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/menu_member_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                <Button
                        android:id="@+id/btn_menu_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:background="#ff901e"
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:text="@string/activity_chatting_room_btn_menu_exit"
                        android:textSize="18sp"/>
            </LinearLayout>


        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>

    <ImageView
            android:id="@+id/helppic1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
            android:id="@+id/helppic1_btnset"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <View
                android:id="@+id/help_qreport"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.023"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.015" />

        <View
                android:id="@+id/help_menu"
                android:layout_width="47dp"
                android:layout_height="37dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.979"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.015" />

        <View
                android:id="@+id/help_character1"
                android:layout_width="47dp"
                android:layout_height="57dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.477" />

        <View
                android:id="@+id/help_character2"
                android:layout_width="47dp"
                android:layout_height="57dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.299"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.615" />

        <View
                android:id="@+id/help_character3"
                android:layout_width="47dp"
                android:layout_height="57dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.688"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.615" />

        <View
                android:id="@+id/help_chatlistfolder"
                android:layout_width="45dp"
                android:layout_height="34dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
